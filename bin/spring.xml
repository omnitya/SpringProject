<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id ="triangle" class="jha.omnitya.Triangle">
		<property name="pointA" ref="point1"></property>
		<property name="pointB" ref="point2"></property>
		<property name="pointC" ref="point3"></property>
	</bean>
	
	<bean id ="point1" class="jha.omnitya.Point">
		<property name="x" value="0"></property>
		<property name="y" value="0"></property>
	</bean>
	
	<bean id ="point2" class="jha.omnitya.Point">
		<property name="x" value="20"></property>
		<property name="y" value="0"></property>
	</bean>
	
	<bean id ="point3" class="jha.omnitya.Point">
		<property name="x" value="0"></property>
		<property name="y" value="20"></property>
	</bean>
</beans>